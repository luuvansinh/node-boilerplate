{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production ts-node-dev --no-notify --respawn --transpileOnly -r dotenv/config src",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly -r dotenv/config src",
    "test": "NODE_ENV=test nyc --reporter=text mocha -r ts-node/register './src/**/*.ts' -r dotenv/config --exclude './src/**/*.d.ts' --timeout 20000 --slow 500 --exit",
    "precommit-msg": "echo 'Pre-commit checks ...' && exit 0",
    "precommit": "npm run lint",
    "apidoc": "apidoc -i src/ -o apidoc",
    "lint": "tslint -p tsconfig.json"
  },
  "dependencies": {
    "async": "^3.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "farmhash": "^3.0.0",
    "helmet": "^3.21.2",
    "http-status-codes": "^1.4.0",
    "immutable": "^4.0.0-rc.12",
    "ioredis": "^4.14.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "method-override": "^3.0.0",
    "moment": "^2.24.0",
    "mongoose": "^5.7.7",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.4",
    "@types/express": "^4.17.1",
    "@types/joi": "^14.3.3",
    "@types/lodash": "^4.14.144",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.26",
    "@types/node": "^12.12.0",
    "ajv": "^6.10.2",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chalk": "^2.4.2",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "pre-commit": "^1.2.2",
    "ts-node-dev": "^1.0.0-pre.43",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  }
}
